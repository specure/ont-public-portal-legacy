{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 2017
    },
    "plugins": [
	    "json",
            "html"
    ],
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "semi": [
            "warn",
            "always"
        ],
	"no-console": [
		"warn",
		{
			"allow": [
				"warn",
				"error"
			]
		}
	]
    }
}
